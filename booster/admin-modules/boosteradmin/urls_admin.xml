<?xml version="1.0" encoding="utf-8"?>
<suburls xmlns="http://jelix.org/ns/suburls/1.0">
    <!-- items -->
    <url pathinfo="/items/"        action="items:index" />
    <url pathinfo="/items/view/:id" action="items:view"/>
    <url pathinfo="/items/reviewed/:id" action="items:reviewed"/>
    <url pathinfo="/items/precreate" action="items:precreate"/>
    <url pathinfo="/items/create" action="items:create"/>
    <url pathinfo="/items/savecreate" action="items:savecreate"/>
    <url pathinfo="/items/preedit/:id" action="items:preupdate"/>
    <url pathinfo="/items/edit/:id" action="items:editupdate"/>
    <url pathinfo="/items/save/:id" action="items:saveupdate"/>
    <url pathinfo="/items/delete/:id"       action="items:delete" >
        <param name="id" type="numeric"/>
    </url>
    <url pathinfo="/items/composer/check/" action="items:checkcomposer"/>

    <url pathinfo="/items/versions/:itemid/new" action="items:createVersion"/>
    <url pathinfo="/items/versions/:itemid/savenew" action="items:saveNewVersion"/>
    <url pathinfo="/items/versions/:itemid/edit/:id" action="items:editVersion"/>
    <url pathinfo="/items/versions/:itemid/save/:id" action="items:saveVersion"/>

    <url pathinfo="/items/review/start"        action="items:startReview" />

    <url pathinfo="/items/review"                  action="itemsreview:index" />
    <url pathinfo="/items/review/editnew/:id"      action="itemsreview:editnew" >
        <param name="id" type="numeric"/>
    </url>
    <url pathinfo="/items/review/savenew/:id"          action="itemsreview:savenew" >
        <param name="id" type="numeric"/>
    </url>
    <url pathinfo="/items/review/editmod/:id"      action="itemsreview:editmod" >
        <param name="id" type="numeric"/>
    </url>
    <url pathinfo="/items/review/savemod"          action="itemsreview:savemod" />

    <!-- versions-->
    <url pathinfo="/versions"               action="versions:index" />
    <url pathinfo="/versions/validated"     action="versions:indexAll" />
    <url pathinfo="/versions/editnew/:id"   action="versions:editnew" >
        <param name="id" type="numeric"/>
    </url>
    <url pathinfo="/versions/savenew"       action="versions:savenew" />
    <url pathinfo="/versions/editmod/:id"   action="versions:editmod" >
        <param name="id" type="numeric"/>
    </url>
    <url pathinfo="/versions/savemod"       action="versions:savemod" />
    <url pathinfo="/versions/delete/:id"    action="versions:delete" >
        <param name="id" type="numeric"/>
    </url>


    <url pathinfo="/jelixversions/" action="jelixversions:index"/>
    <url pathinfo="/jelixversions/view/:id" action="jelixversions:view"/>
    <url pathinfo="/jelixversions/precreate" action="jelixversions:precreate"/>
    <url pathinfo="/jelixversions/create" action="jelixversions:create"/>
    <url pathinfo="/jelixversions/savecreate" action="jelixversions:savecreate"/>
    <url pathinfo="/jelixversions/preedit/:id" action="jelixversions:preupdate"/>
    <url pathinfo="/jelixversions/edit/:id" action="jelixversions:editupdate"/>
    <url pathinfo="/jelixversions/save/:id" action="jelixversions:saveupdate"/>
    <url pathinfo="/jelixversions/delete/:id" action="jelixversions:delete"/>

</suburls>
