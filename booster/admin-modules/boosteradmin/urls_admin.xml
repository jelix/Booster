<?xml version="1.0" encoding="utf-8"?>
<suburls xmlns="http://jelix.org/ns/suburls/1.0">
    <!-- items -->
    <url pathinfo="/items"                  action="items:index" />
    <url pathinfo="/items/validated"        action="items:indexAll" />
    <url pathinfo="/items/editnew/:id"      action="items:editnew" >
        <param name="id" type="numeric"/>
    </url>
    <url pathinfo="/items/savenew/:id"          action="items:savenew" >
        <param name="id" type="numeric"/>
    </url>
    <url pathinfo="/items/editmod/:id"      action="items:editmod" >
        <param name="id" type="numeric"/>
    </url>
    <url pathinfo="/items/savemod"          action="items:savemod" />
    <url pathinfo="/items/delete/:id"       action="items:delete" >
        <param name="id" type="numeric"/>
    </url>  
    <url pathinfo="/items/deleteimage/:id/:submitAction" action="items:deleteImage" >
        <param name="id" type="numeric"/>
    </url>

    <!-- versions-->
    <url pathinfo="/versions"               action="versions:index" />
    <url pathinfo="/versions/validated"     action="versions:indexAll" />
    <url pathinfo="/versions/editnew/:id"   action="versions:editnew" >
        <param name="id" type="numeric"/>
    </url>
    <url pathinfo="/versions/savenew"       action="versions:savenew" />
    <url pathinfo="/versions/editmod/:id"   action="versions:editmod" >
        <param name="id" type="numeric"/>
    </url>
    <url pathinfo="/versions/savemod"       action="versions:savemod" />
    <url pathinfo="/versions/delete/:id"    action="versions:delete" >
        <param name="id" type="numeric"/>
    </url>


    <url pathinfo="/jelixversions/" action="jelixversions:index"/>
    <url pathinfo="/jelixversions/view/:id" action="jelixversions:view"/>
    <url pathinfo="/jelixversions/precreate" action="jelixversions:precreate"/>
    <url pathinfo="/jelixversions/create" action="jelixversions:create"/>
    <url pathinfo="/jelixversions/savecreate" action="jelixversions:savecreate"/>
    <url pathinfo="/jelixversions/preedit/:id" action="jelixversions:preupdate"/>
    <url pathinfo="/jelixversions/edit/:id" action="jelixversions:editupdate"/>
    <url pathinfo="/jelixversions/save/:id" action="jelixversions:saveupdate"/>
    <url pathinfo="/jelixversions/delete/:id" action="jelixversions:delete"/>

</suburls>
